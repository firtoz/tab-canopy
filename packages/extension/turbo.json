{
	"$schema": "../../node_modules/turbo/schema.json",
	"extends": ["//"],
	"tasks": {
		"zip": {
			"dependsOn": [],
			"outputs": [".output/*.zip"]
		},
		"zip:firefox": {
			"dependsOn": [],
			"outputs": [".output/*.zip"]
		},
		"build": {
			"dependsOn": ["db:generate"],
			"inputs": [
				".env",
				"src/**/*.ts",
				"assets/**/*",
				"public/**/*",
				"schema/**/*",
				"entrypoints/**/*"
			],
			"outputs": [".output/**"]
		},
		"build:firefox": {
			"dependsOn": ["db:generate"],
			"inputs": [
				".env",
				"src/**/*.ts",
				"assets/**/*",
				"public/**/*",
				"schema/**/*",
				"entrypoints/**/*"
			],
			"outputs": [".output/**"],
			"env": ["FIREFOX_EXTENSION_ID"]
		},
		"db:generate": {
			"outputs": [
				"schema/drizzle/**",
				"schema/drizzle/indexeddb-migrations/**"
			],
			"inputs": ["schema/src/schema.ts", "schema/drizzle.config.ts"]
		},
		"lint": {
			"inputs": [
				".env",
				"src/**/*.ts",
				"assets/**/*",
				"public/**/*",
				"schema/**/*",
				"entrypoints/**/*"
			],
			"outputs": []
		}
	}
}

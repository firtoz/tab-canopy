{
	"name": "@tabcanopy/extension",
	"version": "0.2.8",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "bun --env-file .env --env-file .env.development wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"db:generate": "bun --bun drizzle-kit generate --config ./schema/drizzle.config.ts && bun --bun drizzle-indexeddb-generate -d './schema/drizzle'",
		"typecheck": "tsc --noEmit",
		"postinstall": "wxt prepare",
		"lint": "biome check --write .",
		"lint:ci": "biome ci .",
		"format": "biome format src --write .",
		"test": "bun test entrypoints",
		"test:unit": "bun test entrypoints"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@firtoz/drizzle-indexeddb": "^0.6.1",
		"@firtoz/drizzle-utils": "^0.3.2",
		"@firtoz/maybe-error": "^1.5.2",
		"@radix-ui/react-context-menu": "^2.2.16",
		"@tanstack/db": "^0.5.23",
		"@tanstack/react-db": "^0.1.67",
		"@webext-core/messaging": "^2.3.0",
		"clsx": "^2.1.1",
		"fuzzysort": "^3.1.0",
		"jotai": "^2.16.2",
		"lucide-react": "^0.563.0",
		"msgpackr": "^1.11.8",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwind-merge": "^3.4.0",
		"valibot": "^1.2.0",
		"zustand": "^5.0.10"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"@types/react": "^19.2.9",
		"@types/react-dom": "^19.1.9",
		"@wxt-dev/module-react": "^1.1.3",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"tailwindcss": "^4.1.18",
		"wxt": "^0.20.13"
	}
}

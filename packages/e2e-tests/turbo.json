{
	"$schema": "../../node_modules/turbo/schema.json",
	"extends": ["//"],
	"tasks": {
		"test": {
			"dependsOn": ["@tabcanopy/extension#build"],
			"outputs": ["playwright-report/**", "test-results/**"],
			"cache": false
		},
		"test:ui": {
			"dependsOn": ["@tabcanopy/extension#build"],
			"cache": false
		},
		"test:headed": {
			"dependsOn": ["@tabcanopy/extension#build"],
			"cache": false
		},
		"lint": {
			"inputs": ["e2e/**", "playwright.config.ts"]
		},
		"lint:ci": {
			"inputs": ["e2e/**", "playwright.config.ts"]
		},
		"format": {
			"inputs": ["e2e/**", "playwright.config.ts"]
		}
	}
}

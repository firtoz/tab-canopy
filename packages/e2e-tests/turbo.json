{
	"$schema": "../../node_modules/turbo/schema.json",
	"extends": ["//"],
	"tasks": {
		"test": {
			"dependsOn": ["@tabcanopy/extension#build"],
			"outputs": ["playwright-report/**", "test-results/**"],
			"inputs": ["e2e/**", "playwright.config.ts", "../extension/.output/**"]
		},
		"test:unit": {
			"inputs": [
				"../extension/entrypoints/**/*.test.ts",
				"../extension/entrypoints/**/*.test.tsx"
			]
		},
		"test:e2e": {
			"dependsOn": ["@tabcanopy/extension#build"],
			"inputs": ["e2e/**", "playwright.config.ts", "../extension/.output/**"]
		},
		"test:ui": {
			"dependsOn": ["@tabcanopy/extension#build"]
		},
		"test:headed": {
			"dependsOn": ["@tabcanopy/extension#build"]
		},
		"lint": {
			"inputs": ["e2e/**", "playwright.config.ts"]
		},
		"lint:ci": {
			"inputs": ["e2e/**", "playwright.config.ts"]
		},
		"format": {
			"inputs": ["e2e/**", "playwright.config.ts"]
		}
	}
}

{
	"name": "tabcanopy",
	"description": "Tree-structured tab manager",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "bun --env-file .env --env-file .env.development wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"db:generate": "bun --bun drizzle-kit generate --config ./schema/drizzle.config.ts && bun --bun drizzle-indexeddb-generate -d './schema/drizzle'",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare",
		"lint": "biome check --write .",
		"lint:ci": "biome ci .",
		"format": "biome format src --write .",
		"test": "bun test"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@firtoz/drizzle-indexeddb": "^0.5.0",
		"@firtoz/drizzle-utils": "^0.3.0",
		"@tanstack/db": "^0.5.11",
		"@tanstack/react-db": "^0.1.55",
		"@webext-core/messaging": "^2.3.0",
		"clsx": "^2.1.1",
		"jotai": "^2.15.2",
		"lucide-react": "^0.556.0",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"tailwind-merge": "^3.4.0",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@tailwindcss/vite": "^4.1.17",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.1.9",
		"@wxt-dev/module-react": "^1.1.3",
		"bun-types": "^1.3.4",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.0",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.2",
		"wxt": "^0.20.6"
	}
}

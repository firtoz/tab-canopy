		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@tailwindcss/vite": "^4.1.17",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.1.9",
		"@wxt-dev/module-react": "^1.1.3",
		"bun-types": "^1.3.3",
